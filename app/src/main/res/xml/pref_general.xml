    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="largura_"
        android:title="@string/largura"
        android:defaultValue="@string/largura_default"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLength="7"
        android:focusable="true"
        android:hint="Largura"
        android:maxLines="1" />

    <EditTextPreference
        android:key="altura_"
        android:title="@string/altura"
        android:defaultValue="@string/altura_default"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLength="7"
        android:focusable="true"
        android:hint="Altura"
        android:maxLines="1" />
    <!--&lt;!&ndash; NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to-->
         <!--dismiss it. &ndash;&gt;-->
